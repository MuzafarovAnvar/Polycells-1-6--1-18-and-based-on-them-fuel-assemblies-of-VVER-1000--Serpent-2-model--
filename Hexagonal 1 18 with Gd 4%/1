% --- Very simple infinite homogeneous geometry for Serpent tutorial

/************************
 * Material definitions *
 ************************/

% --- Fuel material (4.9 wt-% enriched uranium), density 10.4 g/cm3

mat fuelGD   sum tmp 1000.0 rgb 150 255 150 burn 1
92235.09c    0.001091314062
92238.09c    0.021180401493
 8016.09c    0.044543431111
64152.09c    0.000002764765
64154.09c    0.000029030029
64155.09c    0.000204592587
64156.09c    0.000284770763
64157.09c    0.000216342837
64158.09c    0.000342830822
64160.09c    0.000301359351

mat fuel     sum tmp 1000.0 rgb 240 240 100 burn 1
92235.09c    0.001136785481 
92238.09c    0.022062918222
 8016.09c    0.046399407407

mat clad     sum tmp 608 rgb 150 150 150
40000.03c    0.021226164946
41093.03c    0.000214405707

mat water    sum tmp 587 moder lwtr 1001 rgb 200 200 255
1001.03c     0.046597943333
8016.03c     0.023298971667

therm lwtr 587 lwe7.10t lwe7.14t

/************************
 * Geometry definitions *
 ************************/

% --- Fuel pin structure

pin 1
fuelGD  0.3785
clad    0.455           
water    

pin 2
fuel    0.3785
clad    0.455           
water

pin 3
water
 
lat 410  2  0.0  0.0  7  7  1.3048
3 3 3 3 3 3 3
  3 3 3 2 2 2 3
    3 3 2 2 2 2 3
      3 2 2 1 2 2 3 
        3 2 2 2 2 3 3
          3 2 2 2 3 3 3
            3 3 3 3 3 3 3
			
% --- Square surface with 1.5 cm side centered at (x,y) = (0,0)

surf s1 hexyc 0.0 0.0 2.843791
surf 4 pz     0.0 
surf 5 pz     353.0

% --- Cell c1 belongs to the base universe 0, is filled with the pin p1
%     and covers everything inside surface s1

cell c1 0 fill 410   -s1 4 -5

% --- Cell c2 belongs to the base universe 0, is defined as an "outside" cell
%     and covers everything outside surface s1

cell c2 0 outside    s1 4 -5
cell c3 0 outside       -4
cell c4 0 outside          5   

 /******************
 * Run parameters *
 ******************/

% --- Neutron population: 5000 neutrons per cycle, 100 active / 20 inactive cycles

set pop 20000 100 20

set bc 2

plot 3 1000 1000

plot 2 1000 1000

plot 33 1000 1000

% mesh 3 1000 1000

% mesh 2 1000 1000

div fuel  sep 1 

set mcvol 10000000

set inventory
